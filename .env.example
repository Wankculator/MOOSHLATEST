# MOOSH Wallet Environment Configuration
# Copy this file to .env and update with your values

# Server Configuration
NODE_ENV=development
PORT=3001
UI_PORT=8080

# API Configuration
API_RATE_LIMIT=100
API_RATE_WINDOW_MS=60000

# Security
SESSION_SECRET=your-secure-session-secret-here
ENCRYPTION_KEY=your-32-byte-encryption-key-here

# Blockchain APIs (optional - uses public endpoints by default)
MEMPOOL_API_URL=https://mempool.space/api
BLOCKSTREAM_API_URL=https://blockstream.info/api
BLOCKCHAIN_INFO_API_URL=https://blockchain.info

# Spark Protocol
SPARK_NETWORK=mainnet
SPARK_API_KEY=your-spark-api-key-if-required

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:8080,http://localhost:3000

# Feature Flags
ENABLE_MULTISIG=true
ENABLE_LIGHTNING=false
ENABLE_HARDWARE_WALLET=false

# Monitoring (optional)
SENTRY_DSN=
PROMETHEUS_ENABLED=false

# Database (future use)
# DATABASE_URL=postgresql://user:password@localhost:5432/moosh_wallet

# Redis (future use for caching)
# REDIS_URL=redis://localhost:6379